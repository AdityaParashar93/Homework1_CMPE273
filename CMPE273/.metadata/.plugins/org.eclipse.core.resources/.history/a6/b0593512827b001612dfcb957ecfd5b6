
public class TollBooth implements Runnable 
{
	Thread t;
	
	TollBooth()
	{
		t=new Thread();
	}
	
	public void start()
	{
		System.out.println("Creating tollbooth");
		if(t==null)
			t=new Thread();
	}
	
	public void run() 
	{
		System.out.println("");
		try
		{
			System.out.println("Waiting for next car");
			t.wait(100);
			System.out.println("Collecting Toll");
			t.wait(100);
			System.out.println("Releasing Car from Booth");
			t.wait(100);
			
		}
		catch(InterruptedException E)
		{
			System.out.println("TollBooth interrupted.");
		}
		
	
	}

	public static void main(String[] args)throws Exception 
	{
		TollBooth t1,t2,t3;
		t1=new TollBooth();
		t2=new TollBooth();
		t3=new TollBooth();
		t1.start();
		t2.start();
		t3.start();
	}

}
